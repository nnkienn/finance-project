# ==== PostgreSQL (Neon) ====
SPRING_DATASOURCE_URL=jdbc:postgresql://<host>:<port>/<db>?sslmode=require&channel_binding=require
SPRING_DATASOURCE_USERNAME=<db_user>
SPRING_DATASOURCE_PASSWORD=<db_password>

# ==== JPA ====
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ==== Kafka ====
# DÙNG trong Docker Compose nội bộ: kafka:9092
# Nếu chạy local ngoài Docker, bạn có thể đổi thành localhost:9092
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SPRING_KAFKA_CONSUMER_GROUP_ID=finance-app
SPRING_KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
SPRING_KAFKA_PRODUCER_ACKS=all
SPRING_KAFKA_PRODUCER_RETRIES=5
SPRING_KAFKA_PRODUCER_IDEMPOTENCE=true
SPRING_KAFKA_PRODUCER_LINGER_MS=5

# ==== Mail (Gmail App Password) ====
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=<gmail_address>
SPRING_MAIL_PASSWORD=<gmail_app_password>
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_CONNECTIONTIMEOUT=5000
SPRING_MAIL_PROPERTIES_MAIL_SMTP_TIMEOUT=5000
SPRING_MAIL_PROPERTIES_MAIL_SMTP_WRITETIMEOUT=5000

# ==== Server ====
SERVER_PORT=8080
# dev | prod | gmail ... tuỳ profile bạn đang dùng
SPRING_PROFILES_ACTIVE=dev

# ==== App (JWT, verification, outbox cleanup) ====
APP_JWT_BASE64_SECRET=<base64_secret>
APP_JWT_ACCESS_TOKEN_TTL=900
APP_JWT_REFRESH_TOKEN_TTL=604800
APP_VERIFICATION_EXPIRE_MINUTES=60

APP_OUTBOX_CLEANUP_ENABLED=true
APP_OUTBOX_RETENTION_DAYS=14
APP_OUTBOX_BATCH_SIZE=500
APP_OUTBOX_CRON=0 0 3 * * *

APP_EMAIL_FROM=<from_email>
APP_EMAIL_SENDER_NAME=Knance Notifications

# ==== Cloudinary ====
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
